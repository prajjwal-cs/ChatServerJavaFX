<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="349.0" prefWidth="265.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/16" fx:controller="io.github.prajjwal.chatserverjavafx.controller.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label fx:id="startServerText" alignment="CENTER" text="Click to start server">
      <font>
         <Font size="18.0" />
      </font>
   </Label>

    <Label fx:id="statusText" alignment="CENTER">
      <font>
         <Font size="14.0" />
      </font></Label>
    <Button fx:id="severStartButton" onAction="#onStartButtonClick" prefHeight="34.0" prefWidth="63.0" text="Start">
      <font>
         <Font size="14.0" />
      </font></Button>
</VBox>
